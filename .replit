modules = ["python-3.11", "web"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Telegram Email Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "telegram_bot_setup"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Working Telegram Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web Telegram Bot"

[[workflows.workflow]]
name = "Telegram Email Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install python-telegram-bot python-dotenv requests && python main.py"

[[workflows.workflow]]
name = "telegram_bot_setup"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install python-telegram-bot python-dotenv requests"

[[workflows.workflow]]
name = "Working Telegram Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python simple_main.py"

[[workflows.workflow]]
name = "Web Telegram Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python web_bot.py"
waitForPort = 5000

[agent]
expertMode = true

[[ports]]
localPort = 5000
externalPort = 80
